{
	"name": "storybook-addon-grid",
	"version": "0.0.9",
	"description": "Column guides for your stories",
	"keywords": [
		"storybook",
		"storybook-addon",
		"columns",
		"grids",
		"guides",
		"appearance"
	],
	"repository": "maraisr/storybook-addon-grid",
	"license": "MIT",
	"author": {
		"name": "Marais Rossouw",
		"email": "me@marais.dev",
		"url": "https://marais.io"
	},
	"sideEffects": false,
	"exports": {
		"./preset": {
			"import": "./dist/preset.mjs",
			"require": "./dist/preset.js"
		},
		"./chromatic": {
			"import": "./dist/chromatic.mjs",
			"require": "./dist/chromatic.js"
		},
		"./package.json": "./package.json"
	},
	"main": "dist/preset.js",
	"module": "dist/preset.mjs",
	"types": "index.d.ts",
	"files": [
		"dist",
		"preset.js",
		"preset.mjs",
		"index.d.ts"
	],
	"scripts": {
		"build": "node bin",
		"format": "prettier  --write --list-different \"{*,{src,example,bin,.github}/**/*}.+(ts||tsx|js|json|yml|md)\"",
		"example": "concurrently -kr \"yarn start-storybook --config-dir example/.storybook --port 8080  --no-manager-cache\" \"nodemon --ext tsx,ts --ignore dist/ --watch src bin\"",
		"prepublishOnly": "yarn build",
		"typecheck": "tsc --noEmit"
	},
	"prettier": {
		"bracketSpacing": true,
		"printWidth": 80,
		"proseWrap": "always",
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true,
		"overrides": [
			{
				"files": [
					"*.md"
				],
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	},
	"dependencies": {
		"@emotion/cache": "^10.0.29",
		"@storybook/addons": "^6.1.21",
		"@storybook/api": "^6.1.21",
		"@storybook/components": "^6.1.21",
		"@storybook/core-events": "^6.1.21",
		"@storybook/theming": "^6.1.21",
		"@theuiteam/continuous-container": "^1.0.0",
		"diary": "^0.0.12"
	},
	"devDependencies": {
		"@marais/tsconfig": "^0.0.1",
		"@storybook/cli": "^6.1.21",
		"@storybook/react": "^6.1.21",
		"@types/node": "^14.14.35",
		"@types/react": "^17.0.3",
		"@types/react-dom": "^17.0.3",
		"chromatic": "^5.7.0",
		"concurrently": "^6.0.0",
		"cross-env": "^7.0.3",
		"esbuild": "^0.9.6",
		"nodemon": "^2.0.7",
		"prettier": "^2.2.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"typescript": "^4.1.3"
	},
	"peerDependencies": {
		"@types/reac-dom": ">=16.9.0",
		"@types/react": ">=16.9.0",
		"chromatic": "*",
		"react": ">=16.9.0",
		"react-dom": ">=16.9.0"
	},
	"peerDependenciesMeta": {
		"@types/react": {
			"optional": true
		},
		"@types/react-dom": {
			"optional": true
		},
		"chromatic": {
			"optional": true
		}
	},
	"storybook": {
		"displayName": "Column Guides",
		"icon": "https://raw.githubusercontent.com/maraisr/storybook-addon-grid/main/shots/square_logo.png",
		"supportedFrameworks": [
			"React"
		]
	},
	"volta": {
		"node": "15.12.0",
		"yarn": "1.22.10"
	}
}
